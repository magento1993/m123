		</div>
  
	</fieldset><br></br> 

	<div class="actions-toolbar">
		<div class="formbuttons">
			<button type="submit" title="<?php  echo __('Submit') ?>" tabindex="10"  class="action submit primary send">
				<span><?php  echo __('Submit') ?></span>
			</button>
		</div>
	</div>
</div>
</form>
<script type="text/javascript">
	require([
  'jquery',
  'mage/mage'
  ], function($,
    modal) {

   
    var dataForm = $('#makeoffer-form');
    dataForm.mage('validation', {});
    $("#makeoffer-form").on('submit',(function(e) {
      e.preventDefault();
      if(dataForm.validation('isValid')){

        var frurl = $('#makeoffer-form' ).attr( 'action' );
        $.ajax({
          url: frurl,
          data:  new FormData(this),
          processData: false,
          contentType: false,
          showLoader: true,
          type: 'POST',
          success: function(response) {
          	$(dataForm)[0].reset();
         }
       });
      }
    }));
  });
</script>

